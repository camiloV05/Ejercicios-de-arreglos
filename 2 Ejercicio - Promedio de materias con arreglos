Funcion SegunMateria (materia)
	Segun materia Hacer
		Caso 1:
			GuardarNumeros(lista_notas, num);
		Caso 2:
			GuardarNumeros(lista_notas, num);
		Caso 3:
			GuardarNumeros(lista_notas, num);
		De Otro Modo:
			Escribir "Opción incorrecta. Por favor ingresar las opciones";
	Fin Segun
Fin Funcion

Funcion materia <- MostrarMaterias
	Escribir "----- MATERIAS -----";
	Escribir "1. Matemáticas";
	Escribir "2. Español";
	Escribir "3. Inglés";
	Escribir "Digite la materia que desea ingresar notas";
	Leer materia;
Fin Funcion


Funcion GuardarNumeros(lista_notas Por Referencia, num)
	Definir i Como Entero;
	Para materias<-1 Hasta 3 Con Paso 1 Hacer
		Para i <- 1 Hasta 3 Hacer
			Escribir "Ingresa las notas de", materia, ": ";
			Leer nota;
			lista_notas[i]<-nota;
		FinPara
	Fin Para
FinFuncion

Funcion ModificarNumero(lista_notas por referencia)
	Definir nueva_nota Como Entero;
	materias_opcion<-MostrarMaterias;
	Escribir "Ingrese la nota que desea modificar (1-3)";
	Leer nueva_nota;
	Si nueva_nota >= 1 y nueva_nota <= 3 Entonces
		Escribir "Ingrese la nota correctamente:";
		Leer lista_notas[nueva_nota];
	SiNo
		Escribir "Posición inválida";
	FinSi
Fin Funcion
Funcion CalcularPromedio
Definir promedio Como Real;
Definir i Como Entero;
promedio<- 0;
Para i <- 1 Hasta 5 Hacer
	suma <- suma + n[i];
Fin Para
Fin Funcion

